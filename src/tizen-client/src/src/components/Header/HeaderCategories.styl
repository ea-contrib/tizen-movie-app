.categories-menu
    display flex
    flex-direction row
    list-style-type none
    height 100%
    width 100%
    margin 0
    padding 0

.categories-menu__item
    color var(--main-text-color)
    text-transform uppercase
    padding 1rem 1.7rem
    display flex
    align-items center
    cursor pointer

.categories-menu__item--active
    background-color var(--active-menu-background-color)
    position relative
    color var(--active-text-color)

.categories-menu__item--active:after
    content ' '
    position absolute
    bottom 0
    left 0
    right 0
    height 0.3rem
    width 100%
    background-color rgba(100, 164, 251, 0.68)
