.search-box
    background-color var(--main-input-background-color)
    width 100%
    height 100%
    padding 0.5rem 0.7rem
    display flex
    flex-direction row
    align-items center
    position relative

.search-box__input
    height 100%
    border none
    outline none
    background-color var(--main-input-background-color)
    caret-color var(--main-text-color)
    width 100%
    color var(--active-text-color)
    min-width 125px

.search-box__input:focus + .search-box__label,  .search-box__input:not(:placeholder-shown) + .search-box__label, .search-box__input.dirty-input  + .search-box__label
    height 38%
    font-size 0.75rem
    transform translate(0.3rem, -0.9rem)

.search-box__label
    position absolute
    color var(--main-text-color)
    padding-left 2rem
    height 50%
    display flex
    flex-direction row
    align-items center
    transition font-size 0.4s ease-in-out, transform 0.4s ease-in-out, height 0.4s ease-in-out

.search-box__label:before
    content ' '
    display inline-block
    height 100%
    width 100%
    position absolute
    left 0
