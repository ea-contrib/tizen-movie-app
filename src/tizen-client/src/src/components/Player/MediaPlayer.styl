.player__container
  background-color black
  z-index: 100
  width: 100%;
  height: 100%;
  --player-button-size: 2rem
  --player-button-color: rgba(255,255,255,0.41)
.player
  width: 100%
  height 100%
.player__video-container
  position: fixed;
  right: 0;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index 100
.player__action-bar
  position fixed
  left:0
  bottom:0
  z-index 200
  width 100%
  background-color rgba(0,0,0,0.69)
  padding-top 1rem
.player__actions-container
  display flex
  flex-direction row
  justify-content space-around
.player__actions-prev
  fill: var(--player-button-color)
  width: var(--player-button-size)
.player__actions-rewind
  fill: var(--player-button-color)
  width: var(--player-button-size)
.player__actions-next
  fill: var(--player-button-color)
  width: var(--player-button-size)
.player__actions-fast-forward
  fill: var(--player-button-color)
  width: var(--player-button-size)
.player__actions-play-toggle
  fill: var(--player-button-color)
  width: var(--player-button-size)
.player__actions-en-subtitles-toggle
  color: var(--player-button-color)
  width: var(--player-button-size)
.player__actions-ru-subtitles-toggle
  color: var(--player-button-color)
  width: var(--player-button-size)