# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Style for dockerfile
[{Dockerfile,dockerfile}]
indent_style = space
indent_size = 2

# Style for json and yaml
[*.{json,yml}]
indent_style = space
indent_size = 2